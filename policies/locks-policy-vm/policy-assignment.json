{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "policyDefinitionName": {
      "type": "string",
      "defaultValue": "lock-vms-policy",
      "metadata": {
        "description": "Name of the policy definition"
      }
    },
    "policyAssignmentName": {
      "type": "string",
      "defaultValue": "lock-vms-assignment",
      "metadata": {
        "description": "Name of the policy assignment"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Authorization/policyDefinitions",
      "apiVersion": "2021-06-01",
      "name": "[parameters('policyDefinitionName')]",
      "properties": {
        "policyType": "Custom",
        "mode": "Indexed",
        "displayName": "Lock all VMs",
        "description": "Diese Policy stellt sicher, dass alle VM-Ressourcen mit einem CanNotDelete Lock gesch√ºtzt sind.",
        "metadata": {
          "category": "Locks"
        },
        "parameters": {},
        "policyRule": {
          "if": {
            "allOf": [
              {
                "field": "type",
                "equals": "Microsoft.Compute/virtualMachines"
              }
            ]
          },
          "then": {
            "effect": "DeployIfNotExists",
            "details": {
              "type": "Microsoft.Authorization/locks",
              "existenceCondition": {
                "allOf": [
                  {
                    "field": "Microsoft.Authorization/locks.level",
                    "equals": "CanNotDelete"
                  }
                ]
              },
              "roleDefinitionIds": [
                "/providers/Microsoft.Authorization/roleDefinitions/de139f84-1756-47ae-9be6-808fbbe84772"
              ],
              "deployment": {
                "properties": {
                  "mode": "incremental",
                  "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                      {
                        "type": "Microsoft.Authorization/locks",
                        "apiVersion": "2020-05-01",
                        "name": "lockVM",
                        "properties": {
                          "level": "CanNotDelete",
                          "notes": "Automatisch durch Policy erstellter Lock zum Schutz der VM"
                        }
                      }
                    ]
                  },
                  "parameters": {}
                }
              }
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Authorization/policyAssignments",
      "apiVersion": "2021-06-01",
      "name": "[parameters('policyAssignmentName')]",
      "properties": {
        "displayName": "Lock all VMs Assignment",
        "policyDefinitionId": "[resourceId('Microsoft.Authorization/policyDefinitions', parameters('policyDefinitionName'))]",
        "scope": "[subscription().id]",
        "enforcementMode": "Default"
      }
    }
  ]
}
